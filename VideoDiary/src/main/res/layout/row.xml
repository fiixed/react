<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vidImageView"

        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/vidImageView"
        android:layout_toRightOf="@id/vidImageView"
        android:paddingLeft="14dp"

        android:textSize="18sp"
        android:textColor="#888"
        android:id="@+id/listViewDateTimeTextView"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:layout_below="@id/listViewDateTimeTextView"
        android:layout_toRightOf="@id/vidImageView"

        android:textColor="#000000"
        android:id="@+id/listViewTagTextView"

        />


</RelativeLayout>